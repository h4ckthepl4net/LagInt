<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="main.body.content.input.InputController"
          fx:id="mainPane"
          alignment="CENTER"
          gridLinesVisible="true">
    <columnConstraints>
        <ColumnConstraints halignment="CENTER"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints valignment="CENTER" vgrow="ALWAYS"/>
    </rowConstraints>
    <HBox spacing="5.0">
        <padding>
            <Insets left="5.0" right="5.0"/>
        </padding>
        <VBox>
            <Label text="&lt;&amp;$range_start$&amp;&gt;"/>
            <TextField promptText="&lt;&amp;$range_start_description$&amp;&gt;"/>
        </VBox>
        <VBox>
            <Label text="&lt;&amp;$range_end$&amp;&gt;"/>
            <TextField promptText="&lt;&amp;$range_end_description$&amp;&gt;"/>
        </VBox>
        <VBox>
            <Label text="&lt;&amp;$point_count$&amp;&gt;"/>
            <TextField promptText="&lt;&amp;$point_count_description$&amp;&gt;"/>
        </VBox>
    </HBox>
</GridPane>
